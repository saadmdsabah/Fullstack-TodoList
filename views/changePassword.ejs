<%- include("partials/header.ejs", { title, user, url }) -%>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card p-4 shadow-sm"> <!-- Using Bootstrap card for styling -->
                    <h2 class="text-center mb-4">Update Password</h2>
                    <% if (error) { %>
                        <div class="alert alert-danger" role="alert"> <!-- Bootstrap alert for error messages -->
                            <%= error %>
                        </div>
                    <% } %>
                    <form action="/reset-password/<%=token%>?_method=PUT" method="post">
                        <div class="mb-3">
                            <label for="password" class="form-label">New Password</label>
                            <input type="password" name="password" id="password" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">Confirm New Password</label>
                            <input type="password" name="newPassword" id="newPassword" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Update Password</button> <!-- Full-width button -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

<%- include("partials/footer") %>